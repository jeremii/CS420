<!DOCTYPE html>
<html>
<head>
<% include headerStuff %>
</head>
<body>
        <% include pageHeader %>
    <div class="container-fluid">


<% if ( typeof transactions !== 'undefined' ) { %>
<% for ( var t of transactions ) { %>
    <h2>Transaction <%= t.id %></h2>
    <div class="row">
    <div class="col">
        <h3>Customer</h3>
        <div class="col-sm"><label>Name</label><%= t.name %></div>
        <div class="col-sm"><label>Phone</label><%= t.phone %></div>
        <hr/>
    </div>
    </div>
    <div class="row">
    <div class="col">
        <h3>Products</h3>
        <% if( typeof t.products !== 'undefined' ) { %>
            <% for ( var p of t.products ) { %>
                <div class="row">
                <span class="col-sm-4"><label>Name</label><%= p.name %></span>
                <span class="col-sm-4"><label>Price</label><%= p.price %></span>
                <span class="col-sm-4"><label>SKU</label><%= p.SKU %></span>
                <hr />
                </div>
        <% } } %>
        <div class="col-sm"><label>Sub Total</label>$<%= t.totalPrice %></div>
        <div class="col-sm"><label>Tax</label>$<%= t.salesTax %></div>
        <div class="col-sm"><label>Total</label>$<%= (parseFloat(t.totalPrice) + parseFloat(t.salesTax)).toFixed(2) %></div>
    </div>
    </div>
    <hr />
<% } } %>
<% include footer %>

</div>
</body>
</html>
